<script>
    let artelibre = document.getElementById('artelibre');
    let artista = document.getElementById('artista');

    artista.addEventListener('keyup', function () {
        let valueArt = artista.value;
        let valueArtL = 100 - valueArt

        artelibre.value = valueArtL
        artelibre.setAttribute('value', valueArtL)
    });

</script>

