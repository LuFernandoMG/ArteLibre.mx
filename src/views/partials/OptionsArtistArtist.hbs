<!-- Modal Perfil -->
<div class="modal fade" id="editar-perfil" aria-hidden="true">
    <div class="modal-dialog" style="width: 90vw;" role="document">
        <div class="modal-content p-3">
            <div class="modal-header">
                <div class="modal-title">Editar Perfil </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="editar-Artista" class="form" method="POST" enctype="multipart/form-data">
                <div class="row mb-5">
                    <div class="col-12 col-lg-3 text-center">
                <label class="label" data-toggle="tooltip" for="input-image" title="Escoge tu foto">
                    <div class="foto-container">
                        <div class="w-100 h-100 d-flex">
                            <div class="m-auto">
                                <span class="m-auto">
                                    Agregar foto
                                </span>
                            </div>
                        </div>
                        <img class="rounded img-perfil-registro" id="imgSalida" src="" alt="">
                        <input type="hidden" id="image-hidden" name="image">
                        <input type="file" class="sr-only" id="input-image" name="image" accept="image/*">
                    </div>
                </label>
                <div class="modal fade" id="modal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalLabel">Crop the image</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="img-container">
                                    <img id="image" src="">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-compra" id="crop">Cortar</button>
                            </div>
                        </div>
                    </div>
                </div>


                <div>
                    <small class="text-muted mb-0 pb-0">Para cambiarla haz click de nuevo</small>
                </div>
            </div>
                    <div class="col-12 col-lg-9">
                        <div class="row m-3">
                            <div class="col-12 col-lg-6  mb-0">
                                <div class="form-group">
                                    Nombre
                                    <input type="text" class="form-control" id="nombre" aria-describedby="nombre"
                                        placeholder="{{user.nombre}}" value="{{user.nombre}}" name="fullname" >
                                </div>
                            </div>
                            <div class="col-12 col-lg-6  mb-0">
                                <div class="form-group">
                                    Apellido
                                    <input type="text" class="form-control" id="apellido" aria-describedby="apellid"
                                        placeholder="{{user.apellido}}" value="{{user.apellido}}" name="apellido" >
                                </div>
                            </div>
                            <div class="col-12 col-lg-6  mb-0">
                                <div class="form-group">
                                    Email
                                    <input type="email" class="form-control" id="correo" aria-describedby="correo"
                                         placeholder="{{user.email}}" value="{{user.email}}" name="email" >
                                </div>
                            </div>
                            <div class="col-12 col-lg-6  mb-0">
                                Telefono
                                <div class="form-group pd-telephone-input">
                                    <input type="tel" class="form-control telefono" id="telefono"
                                        aria-describedby="{{user.telefono}}" value="{{user.telefono}}" name="telefono" >
                                </div>
                            </div>
                            <div class="col-12 col-lg-6  mb-0">
                                <div class="form-group">
                                    País
                                    <input type="text" class="form-control" id="pais" aria-describedby="pais"
                                        placeholder="{{user.pais}}" value="{{user.pais}}" name="pais" >
                                </div>
                            </div>
                            <div class="col-12 col-lg-6  mb-0">
                                <div class="form-group">
                                    Provincia
                                    <input type="text" class="form-control" id="povincia" aria-describedby="provincia"
                                        placeholder="{{user.provincia}}" value="{{user.provincia}}" name="provincia">
                                </div>
                            </div>
                            <div class="col-12 mb-0">
                                <div class="form-group">
                                    Dirección
                                    <input type="text" class="form-control" id="direccion" aria-describedby="direccion"
                                        placeholder="{{user.direccion}}" value="{{user.direccion}}" name="direccion" >
                                </div>
                            </div>
                            <div class="col-12 col-lg-6  mb-0">
                                <div class="form-group">
                                    Años de Experiencia
                                    <input type="number" class="form-control" id="años" aria-describedby="años"
                                        placeholder="{{user.años_experiencia}}" value="{{user.años_experiencia}}" name="años" >
                                </div>
                            </div>
                            
                           
                            <div class="col-12 col-lg-6  mb-0">
                                <div class="form-group">
                                    Disciplina
                                    <input type="text" class="form-control" id="disciplina2" aria-describedby="tecnica"
                                        placeholder="{{user.disciplina_principal}}" value="{{user.disciplina_principal}}" name="disciplina_sec" >
                                </div>
                            </div>
                            <div class="col-12  mb-0">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="estilo" aria-describedby="estilo"
                                        placeholder="{{user.frase}}" value="{{user.frase}}" name="frase">
                                </div>
                            </div>
                            <div class="col-12 mb-0">
                                <div class="form-group">
                                    Biografia
                                    <textarea class="form-control" id="biografia" aria-describedby="biografia"
                                        placeholder="{{user.biografia}}" value="{{user.biografia}}" name="biografia" ></textarea>
                                </div>
                            </div>
                            <div class="border-bottom mb-5 col-12"></div>
                            
                            
                            <div class="col-12 text-right">
                                <button class="btn btn-compra" type="submit" name='idArtist' id="buttonSubmit"
                                    value="{{user.id}}" name="idArtist">Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<button data-toggle="modal" data-target="#editar-perfil" class="recomendar"><i class="fas fa-pen"></i></button>

<script async defer src="/cropper/cropper.min.js"></script>

<script async defer>
    $(document).ready(function() {


        var avatar = document.getElementById('imgSalida');
        var image = document.getElementById('image');
        var input = document.getElementById('input-image');
        let imageHidden = document.getElementById('image-hidden');
        var $modal = $('#modal');
        var cropper;

        $('[data-toggle="tooltip"]').tooltip();

        input.addEventListener('change', function (e) {

            var files = e.target.files;
            var done = function (url) {
                input.value = '';
                image.src = url;
                $modal.modal('show');
            };
            var reader;
            var file;
            var url;

            if (files && files.length > 0) {
                file = files[0];

                if (URL) {
                    done(URL.createObjectURL(file));
                } else if (FileReader) {
                    reader = new FileReader();
                    reader.onload = function (e) {
                        done(reader.result);
                    };
                    reader.readAsDataURL(file);
                }
            }
        });

        $modal.on('shown.bs.modal', function () {
            cropper = new Cropper(image, {
                aspectRatio: .8,
                viewMode: 1,
            });
        }).on('hidden.bs.modal', function () {
            cropper.destroy();
            cropper = null;
        });

        document.getElementById('crop').addEventListener('click', function () {
            var initialAvatarURL;
            var canvas;

            $modal.modal('hide');

            if (cropper) {
                canvas = cropper.getCroppedCanvas({
                    width: 280,
                    height: 350,
                });
                initialAvatarURL = avatar.src;
                avatar.src = canvas.toDataURL('image/png', 1);
                imageHidden.value = canvas.toDataURL('image/png', 1)
            }
        });
    })
</script>