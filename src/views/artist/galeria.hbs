<div class="galeria-container">
    <div class="galeria-uno">
        <div class="galeria-uno-inner">
            <div class="section">
                <div class="volver-galeria">
                    <button class="btn btn-compra badge badge-pill" style="padding: 10px 20px; font-size: 1.3em;">
                        Volver
                    </button>
                </div>
                <div class="row">
                    <div id="left-column" class="col-lg-6 col-12 active">
                        <div class="galeria-artista">
                            <div class="nombre-artista-galeria">
                                <h1>{{user.nombre}} {{user.apellido}}</h1>
                            </div>
                            <div class="artista-imagen-galeria">
                                <img src="/./uploads/{{user.foto_nombre}}" alt="{{user.foto_nombre}}">
                            </div>
                            <div class="row artista-galeria-filtro mt-3">
                                <div class="col">
                                    <span class="titulo-filtro-galeria">Filtrar por tipo:</span>
                                </div>
                                <div class="col">
                                    <div class="">
                                        <span class="galeria-filtro">Escultura</span><br>
                                        <span class="galeria-filtro">Fotografía</span><br>
                                        <span class="galeria-filtro">Todo</span>
                                    </div>
                                </div>
                            </div>
                            <div class="despliegue-galeria-artista">
                                <div class="d-flex justify-content-center align-items-center">
                                    <div class="my-2 mx-auto">
                                        <div id="sort-galeria-down" class="gold">
                                            <i class="fas fa-sort-up fa-3x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="right-column" class="col-lg-6 col-12">
                            <div class="despliegue-galeria-artista">
                                <div class="d-flex justify-content-center align-items-center">
                                    <div class="my-2 mx-auto">
                                        <div id="sort-galeria-up" class="gold">
                                            <i class="fas fa-sort-down fa-3x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="galeria-seleccion-container">
                                    <img src="" alt="" id="galeria-seleccion-img" data-enlace="/obra/{{id}}">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="row galeria-info">
                                    <div class="col text-center">
                                        <span class="galeria-titulo">Técnica</span> <br>
                                        <span id="galeria-seleccion-tecnica"></span>
                                    </div>
                                    <div class="col">
                                        <span class="galeria-titulo">Estilo</span> <br>
                                        <span id="galeria-seleccion-tipo"></span>
                                    </div>
                                    <div class="col">
                                        <span class="galeria-titulo">Nombre</span> <br>
                                        <span id="galeria-seleccion-nombre"></span>
                                    </div>
                                    <div class="col">
                                        <span class="galeria-titulo">Año</span> <br>
                                        <span id="galeria-seleccion-year"></span>
                                    </div>
                                    <div class="col">
                                        <a id="galeria-seleccion-enlace" class="btn btn-compra badge badge-pill"
                                            href="#">
                                            <span class="galeria-enlace">Ver más</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div id="galeria-dos" class="galeria-dos">
        <div class="galeria-dos-inner">
            {{#each obras1}}
            <div class="galeria-item" data-nombre="{{nombre}}" data-tipo="{{estilo}}" data-tecnica="{{tecnica}}"
                data-year="{{fecha_creacion}}" data-src="/./uploads/{{fotoNombre}}"  data-enlace="/obra/{{id}}">
                <div class="galeria-item-efecto">
                    <div class="galeria-item-blur"></div>
                    <i class="fas fa-eye fa-5x item-ojo"></i>
                </div>
                <img  src="/./uploads/{{fotoNombre}}"  alt="">
            </div>
            {{/each}}

        </div>
        <div class="galeria-dos-inner">
            {{#each obras2}}
            <div class="galeria-item" data-nombre="{{nombre}}" data-tipo="{{estilo}}" data-tecnica="{{tecnica}}"
                data-year="{{fecha_creacion}}" data-src="/./uploads/{{fotoNombre}}"  data-enlace="/obra/{{id}}">
                <div class="galeria-item-efecto">
                    <div class="galeria-item-blur"></div>
                    <i class="fas fa-eye fa-5x item-ojo"></i>
                </div>
                <img src="/./uploads/{{fotoNombre}}"  alt="">
            </div>
            {{/each}}

        </div>
    </div>
</div>
<script src="/js/galeria.js"></script>